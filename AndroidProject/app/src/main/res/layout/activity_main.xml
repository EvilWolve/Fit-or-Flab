<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.udemy.wolf.fitorflab.MainActivity">

    <RelativeLayout
        android:id="@+id/weightBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/sectionWeight">

        <ImageView
            android:id="@+id/weightImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/weight" />

        <TextView
            android:id="@+id/weightProgressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="30%"
            android:textColor="@color/colorBasicText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/weightTodoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:text="10 sets"
            android:textColor="@color/colorBasicText"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/weightTaskTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/weightDescriptionTxt"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Weight lifting"
            android:textColor="@color/colorBasicText"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/weightDescriptionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Do you even lift?"
            android:textColor="@color/colorBasicText"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yogaBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/sectionYoga">

        <ImageView
            android:id="@+id/yogaImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/lotus" />

        <TextView
            android:id="@+id/yogaProgressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="50%"
            android:textColor="@color/colorBasicText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/yogaTodoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:text="1 hour"
            android:textColor="@color/colorBasicText"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/yogaTaskTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/yogaDescriptionTxt"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Yoga"
            android:textColor="@color/colorBasicText"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/yogaDescriptionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Namaste"
            android:textColor="@color/colorBasicText"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cardioBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/sectionCardio">

        <ImageView
            android:id="@+id/cardioImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/cardioProgressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="22%"
            android:textColor="@color/colorBasicText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/cardioTodoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:text="5 miles"
            android:textColor="@color/colorBasicText"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cardioTaskTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cardioDescriptionTxt"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Cardio"
            android:textColor="@color/colorBasicText"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cardioDescriptionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Run like hell"
            android:textColor="@color/colorBasicText"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
